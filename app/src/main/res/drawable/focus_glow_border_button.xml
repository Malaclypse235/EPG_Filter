<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Default state (not focused) -->
    <item android:state_focused="false">
        <shape android:shape="rectangle">
            <solid android:color="#00000088" /> <!-- Transparent background -->
            <corners android:radius="8dp" /> <!-- Rounded corners -->
            <stroke
                android:width="2dp"
                android:color="#88FFFFFF" /> <!-- Faint white border when NOT focused -->
        </shape>
    </item>

    <!-- Focused state -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#FF2196F3" /> <!-- Still transparent background -->
            <corners android:radius="8dp" />

            <!-- Bright white border when focused -->
            <stroke
                android:width="4dp"
                android:color="#FF2196F3" />
        </shape>
    </item>

</selector>