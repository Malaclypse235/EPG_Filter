<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/mal_blue"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp"
            android:text="Settings"
            android:textColor="#2196F3"
            android:textSize="36sp"
            android:textStyle="bold"
            android:fontFamily="@font/dancingscript_bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginBottom="24dp"
            android:background="@android:color/white" />

        <!-- Output Folder Choice -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose Output Folder"
            android:textColor="#FFEB3B"
            android:textSize="18sp"
            android:layout_marginBottom="8dp" />

        <!-- RadioGroup: Documents and Downloads in Same Row -->
        <RadioGroup
            android:id="@+id/radioGroupOutputLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp"
            android:weightSum="2">

            <!-- Documents Option -->
            <RadioButton
                android:id="@+id/radioDocuments"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Documents/MalEPG"
                android:textColor="#FFFFFF"
                android:buttonTint="#FFFFFF"
                android:textSize="16sp"
                android:gravity="center_vertical"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="4dp"
                android:minHeight="48dp" />

            <!-- Downloads Option -->
            <RadioButton
                android:id="@+id/radioDownloads"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Downloads/MalEPG"
                android:textColor="#FFFFFF"
                android:buttonTint="#FFFFFF"
                android:textSize="16sp"
                android:gravity="center_vertical"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="8dp"
                android:minHeight="48dp" />
        </RadioGroup>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="16dp"
            android:background="#666666" />

        <!-- Filtering Speed Label -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:text="Filtering Speed"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />

        <!-- Manual Speed - Full Width Box -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:background="@drawable/outline_box"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <RadioGroup
                android:id="@+id/radioGroupManualSpeed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radioManualFullSpeed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Full Speed"
                    android:textColor="#FFFFFF"
                    android:buttonTint="#FFFFFF"
                    android:textSize="14sp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:minHeight="48dp" />

                <RadioButton
                    android:id="@+id/radioManualBalanced"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Balanced"
                    android:textColor="#FFFFFF"
                    android:buttonTint="#FFFFFF"
                    android:textSize="14sp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:minHeight="48dp" />

                <RadioButton
                    android:id="@+id/radioManualSlow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Slow"
                    android:textColor="#FFFFFF"
                    android:buttonTint="#FFFFFF"
                    android:textSize="14sp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:minHeight="48dp" />
            </RadioGroup>
        </FrameLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="16dp"
            android:background="#666666" />

        <!-- Automatic Mode Label -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:text="Auto Check For Changes"
            android:textColor="#ffffff"
            android:textSize="24sp" />

        <!-- Enable Auto Update with Outline Box -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/outline_box">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Auto Check For Playlist and EPG File Changes?"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />

                <Switch
                    android:id="@+id/switchAutoMode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false" />
            </LinearLayout>
        </FrameLayout>

        <!-- Check Interval Label -->


        <!-- Interval Options - Horizontal with 5 items -->
        <RadioGroup
            android:id="@+id/radioGroupAutoInterval"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="0dp"
                android:layout_marginEnd="32dp"
                android:text="Check Interval:"
                android:textColor="#FF9800"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/radioInterval30Min"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="30 min"
                android:textColor="#FFFFFF"
                android:buttonTint="#FFFFFF"
                android:textSize="14sp"
                android:gravity="center_vertical"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:minHeight="48dp" />

            <RadioButton
                android:id="@+id/radioInterval1Hour"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="1 hr"
                android:textColor="#FFFFFF"
                android:buttonTint="#FFFFFF"
                android:textSize="14sp"
                android:gravity="center_vertical"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:minHeight="48dp" />

            <RadioButton
                android:id="@+id/radioInterval6Hours"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="6 hr"
                android:textColor="#FFFFFF"
                android:buttonTint="#FFFFFF"
                android:textSize="14sp"
                android:gravity="center_vertical"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:minHeight="48dp" />

            <RadioButton
                android:id="@+id/radioInterval12Hours"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="12 hr"
                android:textColor="#FFFFFF"
                android:buttonTint="#FFFFFF"
                android:textSize="14sp"
                android:gravity="center_vertical"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:minHeight="48dp" />

            <RadioButton
                android:id="@+id/radioInterval24Hours"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="24 hr"
                android:textColor="#FFFFFF"
                android:buttonTint="#FFFFFF"
                android:textSize="14sp"
                android:gravity="center_vertical"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:minHeight="48dp" />
        </RadioGroup>

        <!-- Divider below intervals -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="16dp"
            android:background="#666666" />

        <!-- Save / Cancel Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="32dp">

            <Button
                android:id="@+id/buttonSaveSettings"
                style="@style/CustomRoundedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="150dp"
                android:text="Save" />

            <Button
                android:id="@+id/buttonCancelSettings"
                style="@style/CustomRoundedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:minWidth="150dp"
                android:text="Cancel" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>