<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/mal_blue"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp"
            android:text="Settings"
            android:textColor="#2196F3"
            android:textSize="36sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginBottom="24dp"
            android:background="@android:color/white" />

        <!-- Output Folder Choice -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose Output Folder"
            android:textColor="#FFEB3B"
            android:textSize="18sp"
            android:layout_marginBottom="8dp" />

        <!-- RadioGroup: Documents and Downloads in Same Row -->
        <RadioGroup
            android:id="@+id/radioGroupOutputLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp"
            android:weightSum="2">

            <!-- Documents Option -->
            <RadioButton
                android:id="@+id/radioDocuments"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Documents/MalEPG"
                android:textColor="#FFFFFF"
                android:buttonTint="#FFFFFF"
                android:textSize="16sp"
                android:gravity="center_vertical"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="4dp"
                android:minHeight="48dp" />

            <!-- Downloads Option -->
            <RadioButton
                android:id="@+id/radioDownloads"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Downloads/MalEPG"
                android:textColor="#FFFFFF"
                android:buttonTint="#FFFFFF"
                android:textSize="16sp"
                android:gravity="center_vertical"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="8dp"
                android:minHeight="48dp" />
        </RadioGroup>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="16dp"
            android:background="#666666" />

        <!-- Filtering Speed Label -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:text="Filtering Speed"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />

        <!-- Manual & Automatic Groups in Boxes -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

            <!-- Manual Group -->
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:background="@drawable/outline_box">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <!-- Manual Label - Left Justified -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Manual"
                        android:textColor="#FF9800"
                        android:textSize="16sp"
                        android:layout_marginBottom="8dp" />

                    <!-- Manual RadioGroup -->
                    <RadioGroup
                        android:id="@+id/radioGroupManualSpeed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <RadioButton
                            android:id="@+id/radioManualFullSpeed"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Full"
                            android:textColor="#FFFFFF"
                            android:buttonTint="#FFFFFF"
                            android:textSize="14sp"
                            android:padding="4dp" />

                        <RadioButton
                            android:id="@+id/radioManualBalanced"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Balanced"
                            android:textColor="#FFFFFF"
                            android:buttonTint="#FFFFFF"
                            android:textSize="14sp"
                            android:padding="4dp" />

                        <RadioButton
                            android:id="@+id/radioManualSlow"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Slow"
                            android:textColor="#FFFFFF"
                            android:buttonTint="#FFFFFF"
                            android:textSize="14sp"
                            android:padding="4dp" />
                    </RadioGroup>
                </LinearLayout>
            </FrameLayout>

            <!-- Automatic Group -->
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:background="@drawable/outline_box">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <!-- Automatic Label - Left Justified -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Automatic"
                        android:textColor="#FF9800"
                        android:textSize="16sp"
                        android:layout_marginBottom="8dp" />

                    <!-- Automatic RadioGroup -->
                    <RadioGroup
                        android:id="@+id/radioGroupAutoSpeed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <RadioButton
                            android:id="@+id/radioAutoFullSpeed"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Full"
                            android:textColor="#FFFFFF"
                            android:buttonTint="#FFFFFF"
                            android:textSize="14sp"
                            android:padding="4dp" />

                        <RadioButton
                            android:id="@+id/radioAutoBalanced"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Balanced"
                            android:textColor="#FFFFFF"
                            android:buttonTint="#FFFFFF"
                            android:textSize="14sp"
                            android:padding="4dp" />

                        <RadioButton
                            android:id="@+id/radioAutoSlow"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Slow"
                            android:textColor="#FFFFFF"
                            android:buttonTint="#FFFFFF"
                            android:textSize="14sp"
                            android:padding="4dp" />
                    </RadioGroup>
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>

        <!-- Save / Cancel Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="32dp">

            <Button
                android:id="@+id/buttonSaveSettings"
                style="@style/CustomRoundedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="150dp"
                android:text="Save" />

            <Button
                android:id="@+id/buttonCancelSettings"
                style="@style/CustomRoundedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:minWidth="150dp"
                android:text="Cancel" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>