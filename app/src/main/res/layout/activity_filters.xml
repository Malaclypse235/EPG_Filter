<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mal_blue"
    android:padding="10dp">

    <!-- SCROLLABLE FILTER CONTENT -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomBar"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Filters Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Filters"
                android:textSize="40sp"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/dancingscript_bold"
                android:textColor="#2196F3" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/white"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remove:"
                android:textSize="18sp"
                android:textColor="#FF9800" />

            <!-- Non-Latin / Non-English Checkboxes -->
            <!-- Three Checkboxes on Same Row -->
            <!-- Three Checkboxes - Vertically Aligned -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:baselineAligned="false">

                <CheckBox
                    android:id="@+id/checkboxRemoveDuplicates"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="Remove Duplicate Channels"
                    android:textSize="12sp"
                    android:textColor="@android:color/white"
                    android:buttonTint="@android:color/white"
                    android:gravity="center_vertical"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    android:minHeight="48dp" />

                <CheckBox
                    android:id="@+id/checkboxNonLatin"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="Non-Latin Characters"
                    android:textSize="12sp"
                    android:textColor="@android:color/white"
                    android:buttonTint="@android:color/white"
                    android:gravity="center_vertical"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    android:minHeight="48dp" />

                <CheckBox
                    android:id="@+id/checkboxNonEnglish"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="Non-English Characters"
                    android:textSize="12sp"
                    android:textColor="@android:color/white"
                    android:buttonTint="@android:color/white"
                    android:gravity="center_vertical"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    android:minHeight="48dp" />
            </LinearLayout>

            <!-- Descriptions -->
            <!-- Descriptions for Three Checkboxes -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp"
                android:alpha="0.7">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Removes channels with duplicate names or IDs"
                    android:textSize="10sp"
                    android:textColor="@android:color/white"
                    android:paddingEnd="4dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Removes accents, umlauts, etc."
                    android:textSize="10sp"
                    android:textColor="@android:color/white"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ASCII only (A-Z, 0-9, basic punctuation)"
                    android:textSize="10sp"
                    android:textColor="@android:color/white"
                    android:paddingStart="4dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#FFFFFF"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp" />

            <!-- News and Weather Master Checkbox -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="News and Weather:"
                    android:textSize="18sp"
                    android:textColor="#FFFFFF"
                    android:layout_marginEnd="8dp" />

                <CheckBox
                    android:id="@+id/checkboxRemoveNewsWeather"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Remove all News and Weather"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    android:buttonTint="@android:color/white" />
            </LinearLayout>

            <!-- Remove: Label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remove:"
                android:textSize="18sp"
                android:textColor="#FF9800"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp" />

            <!-- First Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <CheckBox
                    android:id="@+id/checkboxFoxNews"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Fox News"
                    android:textSize="12sp"
                    android:textColor="@android:color/white"
                    android:buttonTint="@android:color/white"
                    android:paddingEnd="4dp" />

                <CheckBox
                    android:id="@+id/checkboxCNN"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="CNN"
                    android:textSize="12sp"
                    android:textColor="@android:color/white"
                    android:buttonTint="@android:color/white"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp" />

                <CheckBox
                    android:id="@+id/checkboxMSNBC"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="MSNBC"
                    android:textSize="12sp"
                    android:textColor="@android:color/white"
                    android:buttonTint="@android:color/white"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp" />

                <CheckBox
                    android:id="@+id/checkboxNewsMax"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="NewsMax"
                    android:textSize="12sp"
                    android:textColor="@android:color/white"
                    android:buttonTint="@android:color/white"
                    android:paddingStart="4dp" />
            </LinearLayout>

            <!-- Second Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <CheckBox
                    android:id="@+id/checkboxCNBC"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="CNBC"
                    android:textSize="12sp"
                    android:textColor="@android:color/white"
                    android:buttonTint="@android:color/white"
                    android:paddingEnd="4dp" />

                <CheckBox
                    android:id="@+id/checkboxOAN"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="OAN"
                    android:textSize="12sp"
                    android:textColor="@android:color/white"
                    android:buttonTint="@android:color/white"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp" />

                <CheckBox
                    android:id="@+id/checkboxWeatherChannel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="The Weather Channel"
                    android:textSize="12sp"
                    android:textColor="@android:color/white"
                    android:buttonTint="@android:color/white"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp" />

                <CheckBox
                    android:id="@+id/checkboxAccuWeather"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="AccuWeather"
                    android:textSize="12sp"
                    android:textColor="@android:color/white"
                    android:buttonTint="@android:color/white"
                    android:paddingStart="4dp" />
            </LinearLayout>

            <!-- Final divider inside scroll -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ffffff"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp" />

        </LinearLayout>
    </ScrollView>

    <!-- BOTTOM BAR: Line + Buttons -->
    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:background="@color/mal_blue">

        <!-- Divider Line -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#444444"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp" />

        <!-- Confirm / Cancel Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingTop="4dp"
            android:paddingBottom="2dp">

            <Button
                android:id="@+id/buttonConfirm"
                style="@style/CustomRoundedButton"
                android:minWidth="150dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Confirm"
                android:layout_marginEnd="16dp" />

            <Button
                android:id="@+id/buttonCancel"
                style="@style/CustomRoundedButton"
                android:minWidth="150dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>